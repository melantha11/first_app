<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookItemDetailsActivity">

  <TextView
      android:id="@+id/textview_book_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="100dp"
      android:text="@string/string_item_name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/edittext_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="96dp"
      android:ems="10"
      android:inputType="text"
      android:text="book name"
      app:layout_constraintStart_toEndOf="@+id/textview_book_item_name"
      app:layout_constraintTop_toTopOf="@+id/textview_book_item_name" />

  <Button
      android:id="@+id/button_item_details_ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/string_ok"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.266"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edittext_item_name"
      app:layout_constraintVertical_bias="0.888" />

  <Button
      android:id="@+id/button_item_details_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginBottom="56dp"
      android:text="@android:string/cancel"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/button_item_details_ok"
      app:layout_constraintTop_toBottomOf="@+id/edittext_item_name"
      app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>